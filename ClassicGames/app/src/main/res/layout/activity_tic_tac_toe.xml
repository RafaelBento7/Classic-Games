<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.views.activity.TicTacToe">

    <TextView
        android:id="@+id/tictactoePlayerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tictactoe_player_one"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tictactoePlayerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tictactoe_player_two"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/tictactoePlayerOne"
        app:layout_constraintTop_toBottomOf="@id/tictactoePlayerOne" />

    <TextView
        android:id="@+id/tictactoePlayerTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tictactoe_turn_player_one"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tictactoePlayerTwo"
        app:layout_constraintStart_toStartOf="@id/tictactoePlayerTwo" />

    <Button
        android:id="@+id/btTictactoeRestart"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/restart"
        app:layout_constraintBottom_toBottomOf="@+id/tictactoePlayerTwo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tictactoePlayerTurn"
        app:layout_constraintTop_toTopOf="@+id/tictactoePlayerOne" />

    <!-- GRID -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tictactoePlayerTurn"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical"
        android:layout_margin="30dp">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tictactoeOne"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/red" />
            <ImageView
                android:id="@+id/tictactoeTwo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/red" />
            <ImageView
                android:id="@+id/tictactoeThree"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/red" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tictactoeFour"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/red" />
            <ImageView
                android:id="@+id/tictactoeFive"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/red" />
            <ImageView
                android:id="@+id/tictactoeSix"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/red" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tictactoeSeven"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/red"/>
            <ImageView
                android:id="@+id/tictactoeEight"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:layout_weight="0"/>
            <ImageView
                android:id="@+id/tictactoeNine"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:layout_weight="1"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>