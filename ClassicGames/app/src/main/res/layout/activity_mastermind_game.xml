            <ImageView
                android:id="@+id/seventh_left_two"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/two"
                app:layout_constraintTop_toTopOf="@id/seventh_left_one"
                app:layout_constraintStart_toStartOf="@id/sixth_left_two"/>

            <ImageView
                android:id="@+id/seventh_left_three"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/round_button"
                android:backgroundTint="@color/black"
                android:contentDescription="@string/three"
                app:layout_constraintTop_toTopOf="@id/seventh_left_one"
                app:layout_constraintStart_toStartOf="@id/sixth_left_three"/>

            <ImageView
