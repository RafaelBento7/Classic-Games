<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GuideLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GuideLineStart" parent="GuideLine">
        <item name="layout_constraintGuide_begin">25dp</item>
    </style>

    <style name="GuideLineEnd" parent="GuideLine">
        <item name="layout_constraintGuide_end">25dp</item>
    </style>

    <style name="GuideLineBottom" parent="GuideLine">
        <item name="layout_constraintGuide_end">25dp</item>
    </style>

    <style name="GuideLineTop" parent="GuideLine">
        <item name="layout_constraintGuide_begin">35dp</item>
    </style>

    <style name="CustomTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TitleTextView" parent="CustomTextView">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="BigTextView" parent="CustomTextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextView" parent="CustomTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SmallTextView" parent="CustomTextView">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="Dialog_TextView" parent="CustomTextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Dialog_Button" parent="CustomTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:backgroundTint">@color/dialog_button_background</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--  TIC TAC TOE  -->

    <style name="TicTacToe_ImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <!--  TRUE COLORS  -->>

    <style name="TrueColors_ColorButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!--  Snake  -->

    <!--  Snake Dialogs  -->
    <style name="SnakeDialog_RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:background">@drawable/snake_radio_selector</item>
        <item name="android:button">@color/dark_blue_700</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>