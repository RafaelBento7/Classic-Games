<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:fontFamily">@font/boogaloo</item>
    </style>

    <style name="TitleTextView" parent="CustomTextView">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="BigTextView" parent="CustomTextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="TextView" parent="CustomTextView">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SmallTextView" parent="CustomTextView">
        <item name="android:textSize">15sp</item>
    </style>

    <!--  Games Fragment  -->
    <style name="ImageButton_Games">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <!--  TIC TAC TOE  -->

    <style name="TicTacToe_ImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!--  TRUE COLORS  -->>

    <style name="TrueColors_ColorButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!--  Snake  -->
    <!--  Snake Dialogs  -->
    <style name="SnakeDialog_RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:fontFamily">@font/boogaloo</item>
        <item name="android:background">@drawable/snake_radio_selector</item>
        <item name="android:button">@color/dark_blue_700</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--  Mastermind  -->
    
    <style name="Mastermind_AttemptCircle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:contentDescription">Attempt Circle</item>
    </style>
    
    <style name="Mastermind_SolutionCircle" parent="Mastermind_AttemptCircle">
        <item name="android:text">@string/question_mark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">35sp</item>
    </style>
    
    <style name="Mastermind_PositionCircles">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Mastermind_TruePosition" parent="Mastermind_PositionCircles">
        <item name="android:backgroundTint">@color/red</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Mastermind_WrongPosition" parent="Mastermind_PositionCircles">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Wordle -->
    <style name="Wordle_Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:fontFamily">@font/boogaloo</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">0.1</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="Wordle_Letter">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/boogaloo</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/wordle_border</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Wordle_Letter_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="Wordle_Keyboard_Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:weightSum">1</item>
    </style>
</resources>