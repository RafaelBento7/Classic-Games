<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GuideLine">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GuideLineStart" parent="GuideLine">
        <item name="layout_constraintGuide_begin">25dp</item>
    </style>

    <style name="GuideLineEnd" parent="GuideLine">
        <item name="layout_constraintGuide_end">25dp</item>
    </style>

    <style name="GuideLineBottom" parent="GuideLine">
        <item name="layout_constraintGuide_end">25dp</item>
    </style>

    <style name="GuideLineTop" parent="GuideLine">
        <item name="layout_constraintGuide_begin">35dp</item>
    </style>

    <style name="TicTacToe_ImageView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="CustomTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TitleTextView" parent="CustomTextView">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="TextView" parent="CustomTextView">
        <item name="android:textSize">25sp</item>
    </style>

    <style name="SmallTextView" parent="CustomTextView">
        <item name="android:textSize">20sp</item>
    </style>
</resources>